<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SubCategory">
	<!-- 서브 카테고리를 가져올 때 TopCategory도 가져오기
	SubCategory 모델 객체는 topcategory 멤버 변수가 자동 매핑이 될 수 없고, 또한 assocation으로
	연결해야 하기 때문에 resultMap이 필요 -->
	<resultMap type="SubCategory" id="topcategoryMap">
		<id column="subcategory_id" property="subcategory_id"/>
		<result column="sub_name" property="sub_name"/>
		<association column="topcategory_id" property="topCategory" javaType="TopCategory" 
			select="TopCategory.select"/>
	</resultMap>

	<select id="selectByTopCategoryId" parameterType="int" resultMap="topcategoryMap">
		select subcategory_id, sub_name, topcategory_id from subcategory where topcategory_id=#{topcategory_id}
	</select>
	
	<select id="select" resultMap="topcategoryMap" parameterType="int">
		select subcategory_id, sub_name, topcategory_id from subcategory where subcategory_id = #{subcategory_id}
	</select>
</mapper>